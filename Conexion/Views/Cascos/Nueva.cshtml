    @model Conexion.Models.Cascos

    @{
        ViewData["Title"] = "Nueva";
    }

    <h2>Nueva</h2>

    <form asp-action="NuevaAccion">
        <div class="form-horizontal">
            <h4>Casco</h4>
            <hr />
